<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <ScrollView android:layout_width="fill_parent"
                android:layout_height="fill_parent">
        <LinearLayout android:orientation="vertical"
                      android:layout_width="fill_parent"
                      android:layout_height="fill_parent"
                      android:gravity="center_horizontal"
                >
            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Example #1 - простой пример"
                    android:id="@+id/relative_ex1"
                    android:onClick="onClick"
                    />
            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Example #2 - форма авторизации"
                    android:id="@+id/relative_ex2"
                    android:onClick="onClick"
                    />
            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Example #3 - выравнивание при помощи layout_alignParent*"
                    android:id="@+id/relative_ex3"
                    android:onClick="onClick"
                    />
            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Example #4 - старый пример на новый лад"
                    android:id="@+id/relative_ex4"
                    android:onClick="onClick"
                    />
            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Example #5 - программный"
                    android:onClick="programmLayout"
                    />
        </LinearLayout>
    </ScrollView>
</LinearLayout>

